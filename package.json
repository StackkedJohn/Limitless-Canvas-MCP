{
  "name": "@limitless/canvas-mcp",
  "version": "2.0.0",
  "description": "MCP server for Limitless Canvas - enables Claude Code and Claude Chat to manage projects and tasks",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "limitless-canvas-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:sse": "tsx src/index.ts",
    "dev:stdio": "tsx src/index.ts --stdio",
    "start": "node build/index.js",
    "start:stdio": "node build/index.js --stdio",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf build",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@supabase/supabase-js": "^2.89.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^20.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "typescript": "^5.8.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.19.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "claude-code",
    "claude-chat",
    "limitless-canvas",
    "project-management",
    "sse"
  ],
  "author": "",
  "license": "MIT"
}
